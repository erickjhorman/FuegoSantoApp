<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentos.Fragmento_publicaciones">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="578dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="150dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/imageViewUserAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_gravity="top"
                android:paddingTop="10sp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/idPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publicacion"
                    android:inputType=""/>

                <TextView

                    android:id="@+id/tituloPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo Publicacion" />


                <TextView

                    android:id="@+id/fechaPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha publicacion" />

                <TextView

                    android:id="@+id/autor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autor" />


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/idImagenPublicacion"
                android:layout_width="395dp"
                android:layout_height="218dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-1dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="383dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="5dp"
                android:gravity="bottom"
                android:text="Descripcion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.783"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="155sp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/verDetalle"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Leer mas "
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/txtComentar"
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:text="@string/comentar"
                android:textColor="@color/Gray"
                android:textSize="15sp"
                app:backgroundTint="@color/white">

            </TextView>

            <LinearLayout
                android:id="@+id/btnActions"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtShare"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:text="@string/share">

                </TextView>



            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginBottom="75dp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:src="@mipmap/ic_launcher">

                </ImageView>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="51dp"
                    android:layout_gravity="top
"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_nombre_usuario"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:text="Usuario" />

                    <TextView
                        android:id="@+id/Comentarios"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:text="Comentarios" />


                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha" />

                        <TextView
                            android:id="@+id/txtFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha" />

                        <TextView
                            android:layout_width="57dp"
                            android:layout_height="wrap_content"
                            android:text="Hora" />

                        <TextView
                            android:id="@+id/txtHora"
                            android:layout_width="57dp"
                            android:layout_height="wrap_content"
                            android:text="Hora" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="bottom">


                <ImageView
                    android:id="@+id/imgAvatarComentario"
                    android:layout_width="45sp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="21dp"
                    android:layout_toStartOf="@+id/txtComentario"
                    android:src="@mipmap/ic_launcher">

                </ImageView>

                <EditText
                    android:id="@+id/txtComentario"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="49dp"
                    android:hint="Escribe un comentario"
                    android:imeOptions="actionSend">

                </EditText>

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/btnSendComentario"
                    android:layout_alignEnd="@+id/txtComentario"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="-25dp"
                    android:layout_marginBottom="31dp"
                    android:src="@drawable/ic_send_navbar" />

                <!--
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="bottom"
                    android:textSize="14dp">
                </Button>
                -->

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>