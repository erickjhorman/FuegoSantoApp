<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="130dp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-2dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="86dp"
                android:layout_height="71dp"
                android:layout_gravity="top"
                android:src="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="23dp">

            </ImageView>

            <TextView
                android:id="@+id/txt_nombre_usuario"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="Usuario"
                app:layout_constraintTop_toTopOf="@+id/imgAvatar"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="121dp" />


            <TextView
                android:id="@+id/Comentarios"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corner"
                android:text="    Comentarios"

                app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                app:layout_constraintEnd_toStartOf="@+id/txtFecha"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_usuario"
                app:layout_constraintVertical_bias="0.36"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fecha"
                app:layout_constraintTop_toBottomOf="@+id/txtHora"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="297dp" />

            <TextView
                android:id="@+id/txtHora"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="Hora"
                app:layout_constraintBottom_toTopOf="@+id/Comentarios"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="297dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>